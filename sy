file=$1
echo '------------------------------->>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>--------------------------------------------------'
find ./ -name '*.js' | awk  -F : '{ 
    a=$1;
    split($1,A,"/");
    len=length(A);
    if (A[len]==A[len-1]".js") {
        print $a 
    }
}' | xargs grep $file 
echo '-------------------------------<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<--------------------------------------------------'
